nav.navbar
  .container-fluid
    div
      a(href='./')
        img.logo(src='./assets/images/logo.png', alt='Logo')
      form.navbar-form.navbar-right.simple-form(novalidate name="form")
        .form-group(ng-class="{ 'has-error': form.username.$dirty && form.username.$error.required }")
          input.form-control(type="text" name="username" id="username" class="form-control" ng-model="vm.user.username" required placeholder="username")
        .form-group(ng-class="{ 'has-error': form.password.$dirty && form.password.$error.required }")
          input.form-control(type="password" name="password" id="password" class="form-control" ng-model="vm.user.password" required placeholder="password")
        button.btn.btn-success(type="submit" ng-click="vm.login(vm.user)" nclass="btn btn-primary") Login
        img(ng-if="dataLoading" src="data:image/gif;base64,")